<h1>Would you like me to edit your task?</h1>
<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "What's your task?"%><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Priority Level" %><br>
    <%= f.number_field :priority %>
  </div>
    <div class="field">
    <%= f.label "When is it due?" %><br>
    <%= f.number_field :deadline %>
  </div>
    <div class="field">
    <%= f.label "What time would you like to schedule this in?" %><br>
    <%= f.number_field :time %>
  </div>
  <div class="field">
    <%= f.label "Completed?" %><br>
    <%= f.check_box :is_completed %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br>

